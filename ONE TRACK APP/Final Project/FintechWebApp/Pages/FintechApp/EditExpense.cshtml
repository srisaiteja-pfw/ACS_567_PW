@page
@model FintechWebApp.Pages.FintechApp.EditExpenseModel
@{
}

<br>
<h2>Edit Expense</h2>

@if (@Model.errorMessage.Length > 0)
{
	<div>@Model.errorMessage</div>
}

<form method="POST">
	<input type="hidden" name="id" value="@Model.monthly_expenses.Id" />
	<table>
		<tr>
			<td>Account Number</td>
			<td><input type="text" name="accountnumber" value="@Model.monthly_expenses.Account_number"></td>
		</tr>
		<tr>
			<td>Date</td>
			<td><input type="text" name="date" value="@Model.monthly_expenses.Date"></td>
		</tr>
		<tr>
			<td>Category</td>
			<td><input type="text" name="category" value="@Model.monthly_expenses.Category"></td>
		</tr>
		</tr>
		<td>Expense (in $)</td>
		<td><input type="text" name="expense" value="@Model.monthly_expenses.Expense"></td>
		</tr>
	</table>
	<p></p>

	@if (@Model.successMessage.Length > 0)
	{
		<div>@Model.successMessage</div>
	}
	<!-- Display a button for submitting the form to edit the bill -->
	<input type="submit" value="Edit" class="btn btn-primary" />

	
</form>

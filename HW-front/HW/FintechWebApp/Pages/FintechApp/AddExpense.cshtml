@page
@model FintechWebApp.Pages.FintechApp.AddExpenseModel
@{
}

<!-- HTML page for create Fintech expenses -->
<br>
<h2>Add New Expense</h2>

@if (@Model.errorMessage.Length > 0)
{
	<!-- Display error message if there is any -->
	<div>@Model.errorMessage</div>
}

<form method="POST" onsubmit="handleSubmit(event) ">
	<!-- Table to input expense details -->
	<table>
		<tr>
			<td>Account Number</td>
			<td><input type="text" name="accountnumber" value="@Model.monthly_expenses.Account_number"></td>
		</tr>
		<tr>
			<td>Date</td>
			<td><input type="text" name="date" value="@Model.monthly_expenses.Date"></td>
		</tr>
		<tr>
			<td>Category</td>
			<td><input type="text" name="category" value="@Model.monthly_expenses.Category"></td>
		</tr>
			<td>Expense</td>
			<td><input type="text" name="expense" value="@Model.monthly_expenses.Expense"></td>
		</tr>
		
	</table>
	<p></p>

	@if (@Model.successMessage.Length > 0)
	{
		<!-- Display success message if there is any -->
		<div>@Model.successMessage</div>
	}

	<input type="submit" value="Add" class="btn btn-primary" />

	<script>
		function handleSubmit(event) {
			alert("The expense has been added");
		}
	</script>

</form>